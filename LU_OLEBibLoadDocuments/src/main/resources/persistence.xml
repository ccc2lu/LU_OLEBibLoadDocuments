<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
	<persistence-unit name="ole" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<!-- <class>edu.lu.oleconvert.ole.Bib</class> -->
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.connection.username" value="OLE"/>
			<property name="hibernate.connection.password" value="OLE"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost/ole"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
            <!-- <property name="hibernate.show_sql" value="true"/> -->
		</properties>
	</persistence-unit>
	
	<persistence-unit name="olemigration">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode> -->
		<!-- <class>edu.lu.oleconvert.ole.Bib</class> -->
		<properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect"/>
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:${migrationdbdir}/olemigration.sqlite"/>
            <property name="javax.persistence.jdbc.user" value=""/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="format_sql" value="true" />
            <property name="hibernate.connection.charSet" value="UTF-8" />
            <!--<property name="hibernate.hbm2ddl.auto" value="none" /> -->
            <!-- <property name="hibernate.show_sql" value="true"/> -->
		</properties>
	</persistence-unit>
	
</persistence>
